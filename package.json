{
  "name": "drawdb-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "DrawDB - Free, simple, and intuitive database design tool and SQL generator",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "gui:dev": "turbo run dev --filter=gui",
    "backend:dev": "turbo run dev --filter=backend",
    "backend:inspector": "turbo run inspector:stdio --filter=backend"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
